<Window x:Class="VaultTrack.Views.TransactionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Транзакції" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#2C2C2C">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Main Title -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Загальний баланс" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#EEEEEE"
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,10"/>

        <!-- Main Top Section -->
        <Grid Grid.Row="1" Grid.ColumnSpan="2" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Balance Display and Input Section -->
            <Border Grid.Column="0"
                    Background="#3C3C3C" 
                    CornerRadius="10" 
                    Padding="0,0"
                    Height="45"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center" HorizontalAlignment="Left">
                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Поточний баланс" 
                             FontSize="8" 
                             Foreground="#EEEEEE"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="BalanceInputTextBox" 
                                 Grid.Column="0"
                                 Text="0.00" 
                                 FontSize="16" 
                                 FontWeight="Bold" 
                                 Foreground="#6A5ACD"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                        <Button Content="Зберегти" 
                                Grid.Column="1"
                                Click="SaveBalance_Click"
                                Background="#6A5ACD"
                                Foreground="White"
                                Padding="0,0"
                                Height="20"
                                BorderThickness="0"
                                Margin="10,0,0,0"
                                materialDesign:ButtonAssist.CornerRadius="5">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <!-- Buttons Container -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Height="45">
                <!-- Add Transaction Button -->
                <Button 
                        Foreground="White"
                        Padding="10,5"
                        Height="45"
                        Background="#5C3EAE"
                        >
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="22.5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                    <ContentPresenter.Content>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Plus" Width="20" Height="20" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Додати транзакцію" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </ContentPresenter.Content>
                                </ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Spacer between buttons -->
                <Border Width="10"/>

                <!-- Change Language Button -->
                <Button 
                        Foreground="White"
                        Padding="10,5"
                        Height="45"
                        Background="#5C3EAE"
                        >
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="22.5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                    <ContentPresenter.Content>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Language" Width="20" Height="20" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Змінити мову" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </ContentPresenter.Content>
                                </ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Transactions List -->
        <Border Grid.Row="2" 
                Background="#3C3C3C" 
                CornerRadius="10" 
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Історія транзакцій" 
                         FontSize="20" 
                         FontWeight="Bold" 
                         Foreground="#EEEEEE" 
                         Margin="0,0,0,20"/>

                <!-- Transactions ListView -->
                <ListView x:Name="TransactionsListView" 
                         Grid.Row="1" 
                         BorderThickness="0"
                         Background="Transparent"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#424242"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,5"
                                    Width="350">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="1" 
                                                      Direction="270" 
                                                      Color="Black" 
                                                      Opacity="0.5" 
                                                      BlurRadius="5"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Date -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Date, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                               FontSize="12" 
                                               Foreground="#AAAAAA"
                                               Margin="0,0,0,5"/>

                                    <!-- Category & Description -->
                                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="{Binding Category}" 
                                                   FontSize="16" 
                                                   FontWeight="Bold"
                                                   Margin="0,0,10,0"
                                                   Foreground="#EEEEEE"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   FontSize="16" 
                                                   Foreground="#CCCCCC"/>
                                    </StackPanel>

                                    <!-- Amount -->
                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                               Text="{Binding Amount, StringFormat='{}{0:C}'}" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="{Binding Type, Converter={StaticResource TransactionTypeToColorConverter}}"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Window> 